{
  "name": "echo",
  "version": "0.0.0",
  "description": "simple echo example",
  "main": "./dist/index.js",
  "keywords": [
    "primus",
    "example",
    "echo"
  ],
  "author": "Arnout Kazemier",
  "license": "MIT",
  "typings": "primus.d.ts",
  "dependencies": {
    "copyfiles": "^2.0.0",
    "engine.io": "^3.2.0",
    "eventemitter3": "^3.0.1",
    "nodemon": "^1.17.1",
    "npm-run-all": "^4.1.2",
    "primus": "^7.1.1"
  },
  "devDependencies": {
    "@types/node": "^9.4.7"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "start": "npm-run-all clean copy:static copy:first-build --parallel watch:build watch:server",
    "copy:static": "copyfiles -u 1 ./src/**/*.html app/**/*.css dist/",
    "copy:first-build": "tsc",
    "watch:build": "tsc --watch",
    "watch:server": "nodemon --watch './dist' -e js,html"

  }
}
